%div{:style => "width:74%; float:left; border-right: 1px solid #cccccc;"}
  .skin_preview
    %h3{:class => 'skin_list_title'} Custom Layouts
    .skin_list
      - @custom_skins = Skin.paginate :conditions => 'skin_type = "custom"', :page => params[:page] || 1, :per_page => 12, :order => 'name DESC'
      - unless @custom_skins.empty?
        - @custom_skins.each do |skin|
          .skin
            %h2= skin.name
            .skin_icon= image_tag skin.image.url(:medium)
            .skin_actions
              = link_to('Activate', :controller => :skins, :action => :activate, :id => skin.id)
              | 
              = link_to('Deactivate', :controller => :skins, :action => :deactivate, :id => skin.id)
              | 
              = link_to('Delete', admin_skin_path(skin), :confirm => "Are you sure you want to delete #{skin.name}?", :method => 'delete', :class => 'skin_action')  
            %p.skin_description= skin.description

        .spacer
          %nbsp;
        .paginate
          = will_paginate @custom_skins unless @custom_skins.empty?
      - else
        You have no custom skins.

    %h3{:class => 'skin_list_title'} Premier Layouts
    .skin_list
      - @premier_skins = Skin.paginate :conditions => 'skin_type = "premier"', :page => params[:page] || 1, :per_page => 12, :order => 'name DESC'
      - unless @premier_skins.empty?
        - @premier_skins.each do |skin|
          .skin
            %h2= skin.name
            .skin_icon= image_tag skin.image.url(:medium)
            .skin_actions
              = link_to('Activate', :controller => :skins, :action => :activate, :id => skin.id)
              | 
              = link_to('Deactivate', :controller => :skins, :action => :deactivate, :id => skin.id)
              - if skin.created_by == current_user || current_user.admin?
                |
                = link_to('Delete', admin_skin_path(skin), :confirm => "Are you sure you want to delete #{skin.name}?", :method => 'delete', :class => 'skin_action')
            %p.skin_description= skin.description
        .spacer
          %nbsp;
        .paginate
          = will_paginate @premier_skins unless @premier_skins.empty?
      - else
        You have no premier skins.

    %h3{:class => 'skin_list_title'} Free Layouts
    .skin_list
      - @free_skins = Skin.paginate :conditions => 'skin_type = "free"', :page => params[:page] || 1, :per_page => 12, :order => 'name DESC'
      - unless @free_skins.empty?
        - @free_skins.each do |skin|
          .skin
            %h2= skin.name
            .skin_icon= image_tag skin.image.url(:medium)
            .skin_actions
              = link_to('Activate', :controller => :skins, :action => :activate, :id => skin.id)
              | 
              = link_to('Deactivate', :controller => :skins, :action => :deactivate, :id => skin.id)
              - if skin.created_by == current_user || current_user.admin?
                |
                = link_to('Delete', admin_skin_path(skin), :confirm => "Are you sure you want to delete #{skin.name}?", :method => 'delete', :class => 'skin_action')    
            %p.skin_description= skin.description
        .spacer
          &nbsp;
        .paginate
          = will_paginate @free_skins unless @free_skins.empty?
      - else
        You have no free skins.

%div{:class => 'application_sidebar'}
  %h3 Upload Custom Skins
  .upload_skin
    %p Search you local file system for a skin archive (.zip) to upload.
    = render :partial => '/admin/skins/add_skin_form'


- include_stylesheet 'site_skins/site_skins'
