- @page_title = 'Skin Management - ' + default_page_title

- content_for :page_css do
  :sass
    table.index 
      h4
        font-size: 110%
        margin-top: .5em
        margin-bottom: .25em
      p
        margin-top: .25em
        margin-bottom: .5em

= render :partial => 'add_skin_form'

.outset
  #skin_list
    %h3 Site Skins
    - @skins.each do |skin|
      .skin
        .skin_icon= image_tag skin.image.url(:medium)
        .skin_name_actions      
          .skin_name= skin.name
          .skin_actions= link_to('Delete', admin_skin_path(skin), :confirm => "Are you sure you want to delete #{skin.name}?", :method => 'delete', :class => 'skin_action')      
        .skin_description= skin.description

- include_stylesheet 'site_skins/site_skins'
